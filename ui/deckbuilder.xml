<Panel rotation="0 0 180" position="0 0 -11" width="734" height="180">
  <Panel scale="0.5 0.5 0.5" rectAlignment="UpperLeft" offsetXY="0 0">

    <!-- Card/Deck Input -->
    <InputField onValueChanged="DBOnDeckBuilderInputChanged"
      width="240" height="34" rectAlignment="UpperLeft" offsetXY="0 0"
      placeholder="deck ID, URL, or card ID" />

    <!-- Card/Deck Button -->
    <Panel position="-247 34 10" width="240" height="40">
      <Button onClick="DBOnLoadDeckFromFabraryPressed"
        width="240" height="40" rectAlignment="UpperLeft" offsetXY="0 0">fabrary.net</Button>
      <Button onClick="DBOnLoadDeckFromFABDBPressed"
        width="240" height="40" rectAlignment="UpperLeft" offsetXY="0 -40">fabdb.net</Button>
      <Button onClick="DBOnLoadSingleCardPressed"
        width="240" height="40" rectAlignment="UpperLeft" offsetXY="0 -80">card id</Button>
      <Button onClick="DBOnSpawnTokensPressed"
        width="240" height="40" rectAlignment="UpperLeft" offsetXY="0 -225">tokens</Button>
    </Panel>

  </Panel>
</Panel>
